    "@types/passport-jwt": "3.0.3",
    "@types/passport-local": "1.0.33",
    "@types/supertest": "2.0.10",
    "@types/uuid": "8.3.0",
    "faker": "5.1.0",
    "jest": "26.6.3",
    "supertest": "6.0.1",
    "ts-jest": "26.4.4",
    "ts-loader": "8.0.11",
    "ts-node": "9.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.1.2"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "preset": "ts-jest"
