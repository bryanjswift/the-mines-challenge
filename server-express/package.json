{
  "name": "@mines/express",
  "version": "0.1.0",
  "description": "ExpressJS based API server.",
  "author": "Bryan Swift <bryan@bryanjswift.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bryanjswift/the-mines-challenge/issues"
  },
  "homepage": "https://github.com/bryanjswift/the-mines-challenge#readme",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "prestart": "yarn run build",
    "prestart:debug": "yarn run build",
    "start": "node -r dotenv/config dist/main",
    "start:debug": "node --inspect -r dotenv/config dist/main",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "express": "4.17.1",
    "uuid": "8.3.0"
  },
  "devDependencies": {
    "@types/express": "4.17.8",
    "@types/jest": "26.0.14",
    "@types/uuid": "8.3.0",
    "jest": "26.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
